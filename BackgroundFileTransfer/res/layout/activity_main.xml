<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/CurrentStatusTV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/StopListening"
        android:layout_below="@+id/StopListening"
        android:layout_marginTop="18dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CurrentStatusTV"
        android:layout_below="@+id/StopListening"
        android:text="Current Status :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CurrentStatusTV"
        android:layout_below="@+id/CurrentStatusTV"
        android:text="Current Activity"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/IPTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StartListening"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/StartListening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IPTextView"
        android:layout_centerHorizontal="true"
        android:text="Start Listening" />

    <TextView
        android:id="@+id/CurrentActivityTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/RefreshLogs"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/StopListening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StartListening"
        android:layout_below="@+id/StartListening"
        android:text="Stop Listening" />

    <Button
        android:id="@+id/RefreshLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CurrentActivityTV"
        android:layout_alignParentBottom="true"
        android:text="Refresh Logs" />

</RelativeLayout>